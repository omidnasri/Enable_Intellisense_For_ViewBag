@using ViewBag.Models
@{
    ViewBag.Title = "Index";
    var model = ViewBag.Persons as IEnumerable<Persons>;
}
<table class="table table-striped table-bordered table-hover myTable" id="sample_2">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Family
            </th>
            <th>
                Age
            </th>
        </tr>
    </thead>
    <tbody id="tbl">
        @{
            foreach (var item in model)
            {
                <tr id="@item.Id">
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Age
                    </td>
                </tr>
            }
        }
    </tbody>
</table>